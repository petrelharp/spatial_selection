  added-at = {2009-10-31T18:01:04.000+0100},
  author = {Hoekstra, H. E. and Nachman, M. W.},
  biburl = {http://www.bibsonomy.org/bibtex/25b00b72f06aaf8d8ef5bf99cd66494ea/peter.ralph},
