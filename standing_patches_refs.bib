  intrahash = {622360a87a77593d31f3327e089fb7da},
  journal = {PLoS ONE},
  keywords = {Peromyscus adaptation melanism parallel_adaptation},
  pages = {e6435},
  timestamp = {2009-10-31T17:55:07.000+0100},
  title = {Melanism in \textit{{Peromyscus}} is caused by independent mutations in agouti},
